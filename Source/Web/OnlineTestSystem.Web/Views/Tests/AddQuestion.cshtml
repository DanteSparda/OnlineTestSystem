@model  OnlineTestSystem.Web.ViewModels.Tests.QuestionCreateModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3>Write a full sentence and make sure it ends with "?"</h3>
@using (Html.BeginForm("AddQuestion", "Tests", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(m => m.TestId);
    <div class="container">
        <div class="row">
            <div class="form-group">
                @Html.Label("Question", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Content, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group has-success">
                @Html.Label("Correct answer", new { @class = "control-label col-md-2" })
                <input type="text" name="Answers[0].Content" />
                <input type="hidden" name="Answers[0].IsCorrect" value="True" />
            </div>
            <div class="form-group has-warning">
                @Html.Label("Wrong answer", new { @class = "control-label col-md-2" })
                <input type="text" name="Answers[1].Content" />
            </div>
            <div class="form-group has-warning">
                @Html.Label("Wrong answer", new { @class = "control-label col-md-2" })
                <input type="text" name="Answers[2].Content" />
            </div>
            <div class="form-group has-warning">
                @Html.Label("Wrong answer", new { @class = "control-label col-md-2" })
                <input type="text" name="Answers[3].Content" />
            </div>
        </div>
    </div>
    <div>
        <input type="submit" id="submit" class="btn btn-success" value="Add Question" />
    </div>
}